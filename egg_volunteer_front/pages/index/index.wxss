.home-page{
  text-align: center;
}

.home-page-header {
  overflow: hidden;
}

.home-page-header.block {
  display: block;
  margin-bottom: 32rpx;
}

/* 卡片组件 */
.card{
  display: flex;
  flex: 1;
  padding: 24rpx 0;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #E6E6E6;
  position: relative;
}

.card .card-info {
  flex: 1;
  margin: 0 20rpx;
}

.card .card-info text {
  line-height: 1.5;
  display: block;
  color: #666;
  font-size: 24rpx;
}

.card image {
  width: 260rpx;
  height: 180rpx;
}

/* card右侧box */
.card-right-box {
  display: flex;
  align-items: center;
  position: relative;
  width: 96rpx;
  margin-right: 30rpx;
}

.card-right-box .status {
  position: absolute;
  top: 0;
  right: 0;
  padding: 10rpx 0rpx;
  width: 100rpx;
  text-align: center;
  font-size: 24rpx;
  color: white;
  background-image: linear-gradient(to right, #62e55d 0%, #5FC3E4  51%, #E55D87  100%);
  transition: 0.5s;
  background-size: 200% auto;
  box-shadow: 0 0 20px #eee;
  border-radius: 20rpx;
  display: block;
}
/* 状态控制css */
.status-max {
  color: white !important;
  background-image: linear-gradient(to right, #fc8600 0%, #fc8600  51%, #1900f7  100%) !important;
}

.status-end {
  color: white !important;
  background-image: linear-gradient(to right, #95968f 0%, #8f977a  51%, #e64477  100%) !important;
}

.card-right-box .details {
  width: 100rpx;
  height: 54rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  text-align: center;
  line-height: 54rpx;
  color: #FFF;
  font-size: 24rpx;
  border-radius: 20rpx;
  background-color: #4193f0;
}
.card-container{
  display: flex;
  flex-wrap: wrap;
}


.activity-title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  min-height: 70rpx;
}

.activity-title text{
  font-size: 30rpx !important;
  font-weight: 700;
  color: #333;
  width: 290rpx;
  /* height: 80rpx; */
  line-height: 36rpx !important;
}

.active-detail view{
  display: -webkit-box;
  align-items: center;
}

.active-detail text{
  margin-left: 10rpx;
}

.info-text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
}

.icon-class {
  display: flex !important;
  align-items: center !important;
}

.footer{
  height: 100rpx;
}