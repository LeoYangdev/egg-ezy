/* authentication.wxss */
page{
  background-color: #f1f1f1;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100vh;
  padding-top: 10px;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}

.logo {
  width: 500rpx;
  height: 180rpx;
}

.logo-text {
  margin-top: 10px;
  margin-bottom: 10px;
  font-size: 32rpx; /* 调整字号 */
  font-weight: bold; /* 加粗 */
  color: #666;
}

form {
  width: 80%;
}

.auth-button {
  margin-top: 30rpx;
  width: 100%;
}

.success-message {
  margin-top: 20px;
  font-size: 20px;
  color: #009933; /* 深绿色 */
}
