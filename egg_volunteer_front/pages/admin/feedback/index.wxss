page{
  background-color: #f1f1f1;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
}

.feedback-list {
  width: 100%;
}

.feedback-item {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.feedback-title {
  /* display: flex; */
  justify-content: space-between;
  align-items: center;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis; 
  white-space: nowrap;
}

.feedback-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.feedback-info {
  display: flex;
}

.feedback-type {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 8rpx;
  border: 1rpx solid #ccc; /* 添加外边框 */
  border-radius: 12rpx; /* 添加圆角 */
  padding: 4rpx 8rpx; /* 添加内边距 */
}

.feedback-status {
  font-size: 32rpx;
  color: #666;
  border: 1rpx solid #ccc; /* 添加外边框 */
  border-radius: 12rpx; /* 添加圆角 */
  padding: 4rpx 8rpx; /* 添加内边距 */
}

.feedback-title-time {
  display: flex;
  flex-direction: column; /* 分列显示 */
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.feedback-time {
  color: #666;
  font-size: 32rpx;
  margin-top: 8rpx; /* 间距 */
}

.feedback-content {
  font-size: 32rpx;
  color: #666;
  overflow: hidden; /* 设置超出部分隐藏 */
  white-space: nowrap; /* 设置不换行 */
  text-overflow: ellipsis; /* 超出部分显示省略号 */
  width: 80%;
}

.feedback-actions {
  display: flex;
  justify-content: flex-end;
  margin:10rpx 24rpx 24rpx 0rpx; /* 上右下左 */
  position: absolute; /* 绝对定位 */
  bottom: 0; /* 顶部对齐 */
  right: 0; /* 右侧对齐 */
}

/* 反馈类型样式 */
.feedback-type.feedback {
  background-color: #6699cc; /* 深蓝色 */
  color: #fff; /* 白色 */
}

.feedback-type.suggestion {
  background-color: #ff9966; /* 橙色 */
  color: #fff; /* 白色 */
}

/* 状态样式 */
.feedback-status.pending {
  background-color: #ff9900; /* 橙色 */
  color: #fff; /* 白色 */
}

.feedback-status.completed {
  background-color: #009933; /* 深绿色 */
  color: #fff; /* 白色 */
}