.user-info {
  padding-bottom: 100px;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
}

.panel-item {
  border-bottom: 1px solid aliceblue;
}

.panel-item::after {
  border: 0;
}
