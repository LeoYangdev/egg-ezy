.button-edit {
  display:flex;
  position:fixed; 
  width:100%;
  z-index:3;
  bottom:30rpx;
  /* margin: 0 32rpx; */
}
.edit-part {
  background:whitesmoke;
  display:flex;
  position:fixed; 
  width:100%;
  height:150rpx;
  z-index:2;
  bottom:0rpx;
}
.sticky-button {
  margin: 0 30rpx;
  width:100%;
}
