.container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  flex-flow: column;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.time {
  font-size: 18rpx;
  color: #666666;
}

.approval-list {
  width: 100%;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eeeeee;
  padding: 20rpx 0;
}

.info {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.name {
  font-size: 28rpx;
  color: #333333;
}
.contact {
  font-size: 28rpx;
  color: #333333;
}

button {
  margin-left: 20rpx;
}

/* 模态框样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal {
  width: 80%;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
}

.modal-header {
  font-size: 32rpx;
  color: #333;
  text-align: center;
}

.modal-content {
  margin-top: 20rpx;
}

.modal-textarea {
  width: 100%;
  height: 200rpx;
  padding-top: 10rpx;
  font-size: 28rpx;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
}

.modal-footer {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.btn-confirm,
.btn-cancel {
  width: 45%;
  padding: 10rpx;
  font-size: 28rpx;
  border: none;
  border-radius: 8rpx;
  color: #fff;
  cursor: pointer;
}

.btn-confirm {
  background-color: #4caf50;
}

.btn-cancel {
  background-color: #f44336;
}