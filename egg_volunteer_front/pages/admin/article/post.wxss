.containers {
  height: 100%;
  padding: 20rpx; /* 适当调整内边距 */
  box-sizing: border-box;
}

.containers textarea{
  padding: 10rpx;
  border: 1px solid #6f6f6f;
  border-radius: 10rpx;
}

.input-example__label {
  line-height: 40rpx;
  padding-left: 32rpx;
}
.box {
  padding: 18rpx;
  display: flex;
  justify-content: space-evenly;
  background-color: var(--td-bg-color-container, #fff);
  border-radius: 12rpx;
}