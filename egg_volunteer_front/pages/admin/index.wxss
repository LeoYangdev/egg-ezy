.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.user-info-card {
  /* width: 90%; */
  border-radius: 10rpx;
  background-color: #f0f8ff; /* 修改背景色 */
  margin:0 32rpx 32rpx 32rpx;
  padding: 20rpx; /* 增加内边距 */
}

.user-info {
  /* display: flex; */
  align-items: center;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 10rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-department,
.user-permission {
  font-size: 24rpx;
  line-height: 40rpx;
  color: #888888;
}
