/* pages/admin/messages/list.wxss */
.container {
  padding: 20rpx;
}

.message-card {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.message-info {
  margin-bottom: 10rpx;
}

.content {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2; /* 显示两行 */
  -webkit-box-orient: vertical;
}

.sender {
  font-size: 24rpx;
  color: #666;
}

.message-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.time {
  font-size: 24rpx;
  color: #666;
}

.read-status {
  font-size: 24rpx;
  color: #666;
}
