.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  justify-content: flex-start; /* 将内容从顶部开始排列 */
  align-items: flex-start; /* 使内容左对齐 */
}

.top-section {
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  text-align: left;
}

.info {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.info-item {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx; /* 增加间距 */
  text-align: left;
}

.content-section {
  flex: 1;
}

.content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  text-align: left;
}
