.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  padding-bottom: 100rpx;
}

.cover-image {
  height: 400rpx;
}

.content {
  width: 100%;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.titleview {
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.info,
.description,
.requirements {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.info-item {
  font-size: 28rpx;
  color: #666666;
}

.footer {
  position: fixed;
  bottom: 20rpx;
  left: 0;
  right: 0;
  height: 98rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 20rpx;
}
